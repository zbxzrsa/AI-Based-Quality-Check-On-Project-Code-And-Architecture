# Project-specific npm configuration
# Isolate this project's cache and configuration

# Use project-specific cache directory
cache=.npm-cache

# Use project-specific temp directory
tmp=.npm-tmp

# Disable global package installation
global=false

# Use project-specific prefix
prefix=.

# Disable package-lock for this project
package-lock=false

# Set registry to default (can be overridden if needed)
registry=https://registry.npmjs.org/

# Disable audit for this project
audit=false

# Disable color output
color=false

# Set log level
loglevel=info
