# Environment Configuration for AI Code Review Platform

# Node Environment
NODE_ENV=development

# Service Ports
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
CODE_REVIEW_ENGINE_PORT=3002
ARCHITECTURE_ANALYZER_PORT=3003
AGENTIC_AI_PORT=3004
PROJECT_MANAGER_PORT=3005

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_code_review
REDIS_URL=redis://localhost:6379
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# GitHub Integration
GITHUB_ACCESS_TOKEN=your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Authentication Providers
SAML_CERT_PATH=./certs/saml.crt
SAML_KEY_PATH=./certs/saml.key
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info

# Service Timeouts (milliseconds)
WEBHOOK_PROCESSING_TIMEOUT=30000
ANALYSIS_TIMEOUT=300000
REQUEST_TIMEOUT=60000

# AI Configuration
DEFAULT_MODEL=gpt-4
MAX_TOKENS=4000
TEMPERATURE=0.1

# Task Queue Configuration
TASK_QUEUE_CONCURRENCY=5
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=5000

# File Processing
MAX_FILE_SIZE=10485760

# Metrics
METRICS_RETENTION_DAYS=90