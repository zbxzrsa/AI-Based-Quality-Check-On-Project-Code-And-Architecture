{
  "name": "@ai-code-review/architecture-analyzer",
  "version": "1.0.0",
  "description": "Architecture Analyzer service for AI Code Review Platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:property": "jest --testNamePattern='Property'",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "neo4j-driver": "^5.15.0",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "typescript": "^5.3.0",
    "@typescript-eslint/parser": "^6.13.0",
    "acorn": "^8.11.2",
    "acorn-walk": "^8.3.0",
    "graphology": "^0.25.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "fast-check": "^3.15.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}