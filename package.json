{
  "name": "ai-code-review-platform",
  "version": "1.0.0",
  "description": "AI-powered code review and architecture analysis platform",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:property": "npm run test:property --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "dev:api-gateway": "npm run dev -w services/api-gateway",
    "dev:auth-service": "npm run dev -w services/auth-service",
    "dev:code-review-engine": "npm run dev -w services/code-review-engine",
    "dev:architecture-analyzer": "npm run dev -w services/architecture-analyzer",
    "dev:agentic-ai": "npm run dev -w services/agentic-ai",
    "dev:project-manager": "npm run dev -w services/project-manager",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}